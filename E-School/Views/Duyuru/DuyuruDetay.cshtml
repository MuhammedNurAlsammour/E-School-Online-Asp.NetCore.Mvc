            CKEDITOR.replace('editor1', {
                customConfig: '/Content/vendor/ckeditor/config.js'
            });
            CKEDITOR.instances.editor1.on('change', function () {
                $("#duyuruKaydet").removeAttr('hidden');
                $("#duyuruKaydetvazgec").removeAttr('hidden');
            });
        </script>
        <div style="float:right;margin-top:3px;">
            <a href="/Duyuru/Duyurular" class="btn btn-danger font-weight-bolder" id="duyuruKaydetvazgec" hidden>Vazgeç</a>
            <button class="btn btn-secondary font-weight-bolder" id="duyuruKaydet" hidden >Kaydet</button>
        </div>
    </div>
